<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/bannerBt"
            android:text="显示横幅广告"
            android:layout_weight="1"
            android:gravity="center"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/hideBanner"
            android:text="隐藏横幅广告"
            android:layout_weight="1"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/loadSc"
            android:text="下载开屏全屏"
            android:layout_weight="1"
            android:gravity="center"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/showSc"
            android:text="显示开屏全屏"
            android:layout_weight="1"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/loadInt"
            android:text="下载插屏全屏"
            android:layout_weight="1"
            android:gravity="center"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/showInt"
            android:text="显示插屏全屏"
            android:layout_weight="1"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/loadInthalf"
            android:text="下载插屏半屏"
            android:layout_weight="1"
            android:gravity="center"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/showInthalf"
            android:text="显示插屏半屏"
            android:layout_weight="1"
            android:gravity="center"/>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/splashHalfBt"
        android:text="开屏半屏测试"
        android:gravity="center"/>
</LinearLayout>
